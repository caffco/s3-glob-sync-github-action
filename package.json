    "eslint-plugin-jest": "^27.1.3",
    "husky": "^8.0.1",
    "jest": "^29.3.0",
    "jest-circus": "^29.2.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
